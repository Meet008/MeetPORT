---
import * as CONTENT from "../pages/content";
import profile from "../../public/Meet_profile.jpeg";
---

<!-- Hero section -->
<header class="mx-auto pt-16">
  <article
    class="grid grid-cols-3 grid-rows-1 place-items-center w-[98vw] max-w-2xl"
  >
    <div
      class="rounded-full border-primary self-end shadow-2xl md:w-36 w-20 aspect-square"
    >
      <img
        src={profile}
        alt="profile_picture"
        class="object-cover w-full h-full rounded-full grayscale-[50] hover:grayscale-0"
      />
    </div>

    <div class="grid text-center self-center whitespace-nowrap">
      <h1 class="text-3xl text-text">{CONTENT.name}</h1>
      <h3 class="text-base text-text/90">{CONTENT.designation}</h3>
      <h5 class="text-sm text-text/80">{CONTENT.location}</h5>
    </div>
  </article>
</header>
